 *    The display of view used for rendering.
 * @param string $param
 *    Additionals parameters.
 *
 * @return string
 *    Return output of view.
 */
function _esf_tc_content_types_render_view($view_name, $view_display, $param) {
  $output = '';
  $view = views_get_view($view_name);
